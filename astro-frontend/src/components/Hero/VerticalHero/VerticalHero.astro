---
import type { HeroBlock } from "@utils/payload/types";
interface Props extends HeroBlock {}

import Container from "@components/Container.astro";
import s from "./style.module.css";

import CustomImage from "@components/CustomImage.astro";

const props = Astro.props;
---

<header class:list={[s["vertical_hero content_section"], "bg--primary-darker"]}>
    <Container>
        <article class={s["vertical_hero__content"]} data-direction="column">
            <h1 data-animate="fade-slide-load">{props.heading}</h1>
            <div data-animate="fade-slide-load" data-animate-children="true">
                <p>{props.excerpt}</p>
                <a
                    class="btn btn--primary "
                    href="#contact"
                    style="margin-top: var(--size-3);"
                    >Let's Work Together</a
                >
            </div>
        </article>

        <div class:list={[s["vertical_hero__image_wrapper"], "breakout"]} data-animate="fade-slide-load">
            <CustomImage
                classlist={s["vertical_hero__image"]}
                eager={true}
                image={props.cover}
                size="large"
            />
        </div>
    </Container>
</header>
