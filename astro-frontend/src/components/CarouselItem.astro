---
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`carousel-item ${className}`}>
  <slot />
</div>

<style>
  .carousel-item {
    flex: 0 0 auto;
    min-width: 0;
  }
</style>

